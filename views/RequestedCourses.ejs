<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>selected courses</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@1,300&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="css/mycss.css" />

    <script src="./js/logout.js"></script>
  </head>

  <body>
    <header>
      <nav
        class="navbar sticky-top navbar-light"
        style="background-color: hsl(335, 92%, 43%)"
      >
        <img
          src="./images/chalkboardlogo.jpg"
          alt="Logo"
          class="logo"
          height="70"
          width="100"
        />
        <a
          href="/login"
          class="btn btn-warning"
          style="position: absolute; top: 2rem; right: 2.5rem"
          onclick="logout();"
          >Log Out</a
        >
      </nav>
      <div class="text-center" id="search">
        <input type="text" placeholder="Search.." />
      </div>
    </header>

    <main class="text-center">
      <div class="header">
        <h1>Welcome Teacher!</h1>
      </div>

      <h3>Requested Classes:</h3>
      <div class="list-group">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col " style="margin-right: 10vw">No.of</th>
              <th scope="col ">student ID</th>
              <th scope="col ">Course ID</th>
              <th scope="col ">accept/reject</th>
            </tr>
          </thead>
          <tbody>
            <% if(data.length>0){ var i=0;data.forEach(function(d){%>
            <tr>
              <th scope="row" style="width: 10vw; text-align: center">
                <%= (i+1) %>
              </th>
              <td style="width: 10vw; text-align: center"><%= d.studid%></td>
              <td style="width: 10vw; text-align: center"><%= d.cid%></td>
              <td>
                <select name="permission" id="permission" style="width: 10vw">
                  <option value="none">select</option>
                  <option value="accept">accept</option>
                  <option value="reject">reject</option>
                </select>
              </td>
            </tr>
            <% i++; }) %> <% } else{ %>
            <tr>
              <td colspan="3">No course available</td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <input
          type="submit"
          style="
            width: 10vw;
            height: 3vw;
            background-color: #4caf50;
            color: white;
            margin: 5vw;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1.5vw;
            border: none;
          "
          value="Submit"
          onclick="Apply(event);"
          class="btn btn-success"
        />
      </div>
    </main>
    <footer class="sticky-bottom" style="margin-top: 200px">
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <a class="nav-link disabled" aria-current="page" href="#"
            >King's College</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link" href="mailto:12345@email.com">12345@email.com</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">(000)-(111)-(2222)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#"
            >100 St. Ave Z. New York,NY 00001</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link disabled">&copy; 2021</a>
        </li>
      </ul>
    </footer>
    <script>
      function Apply(event) {
        event.preventDefault();
        const permission = document.getElementById("permission").value;
        console.log(permission);
      }
    </script>
  </body>
</html>
